<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_google_signin_btn_icon_light"
    tools:context="com.example.jacky.weardownloader.MainActivity"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal"
            android:lineSpacingExtra="8sp"
            android:text="@string/downloader_text"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp"
            app:layout_box="all" />

        <TextView
            android:id="@+id/BandwidthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:gravity="top|center_horizontal" />

        <TextView
            android:id="@+id/LastDownloadTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:gravity="bottom|center_vertical|center_horizontal" />

        <Button
            android:id="@+id/DownloadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download" />
    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>
